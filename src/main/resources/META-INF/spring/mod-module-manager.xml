<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                          http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="messageSource" class="org.jahia.utils.i18n.ModuleMessageSource"/>

    <bean id="ModuleInfoPersister" class="org.jahia.modules.modulemanager.persistence.ModuleInfoPersister"
          init-method="start">
        <property name="clusterNode">
            <bean class="org.jahia.modules.modulemanager.model.ClusterNodeInfo">
                <property name="id" value="${cluster.node.serverId}"/>
                <property name="processingServer" value="${processingServer:true}"/>
                <property name="clusterActivated" value="${cluster.activated}"/>
            </bean>
        </property>
        <property name="moduleInfoInitializer" ref="ModuleInfoInitializer"/>
    </bean>

    <bean id="BundleService" class="org.jahia.modules.modulemanager.impl.BundleServiceImpl"
          init-method="start" destroy-method="stop">
    </bean>

    <bean id="ModuleInfoInitializer" class="org.jahia.modules.modulemanager.persistence.ModuleInfoInitializer">
        <property name="bundleService" ref="BundleService"/>
    </bean>
</beans>